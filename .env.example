# Application
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Database
DATABASE_PATH=./data/lab.db

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# CORS
CORS_ORIGIN=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External API (for testing API10)
MOCK_THIRD_PARTY_API=http://localhost:3001/mock-api

# Security (Intentionally weak for vulnerable endpoints)
WEAK_JWT_SECRET=weak-secret-for-demo
ENABLE_VULNERABLE_ENDPOINTS=true
